<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:indeterminate="@color/bg_grad_end_g1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginEnd="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@drawable/dlg_white_trtl_c15"
            android:orientation="vertical"
            android:paddingLeft="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding">

            <ImageView
                android:id="@+id/img_center_back"
                android:layout_width="@dimen/width38"
                android:layout_height="@dimen/height30"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/search"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center"
                android:paddingLeft="@dimen/padding50"
                android:paddingRight="@dimen/padding50"
                android:text="@string/listen_ayah"
                android:textColor="@color/black"
                android:textSize="@dimen/text22"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginBottom="@dimen/def_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_ayah_num"
                    android:textColor="@color/black"
                    android:textSize="@dimen/def_lbl_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_ayat_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_edt_height"
                    android:layout_marginTop="@dimen/margin5"
                    android:background="@drawable/rec_lwhite_c8"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingStart="@dimen/padding10"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:singleLine="true"
                    android:textColor="@color/bg_grad_end_g1"
                    android:textSize="@dimen/def_text_size" />

                <TextView
                    android:id="@+id/txt_reciter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:text="@string/reciters"
                    android:textColor="@color/black"
                    android:textSize="@dimen/def_text_size" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_listen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/def_btn_height"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin2"
            android:background="@drawable/rec_green_white_c10"
            android:text="@string/listen"
            android:textAllCaps="false"
            android:textColor="@color/bg_grad_end_g1"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>